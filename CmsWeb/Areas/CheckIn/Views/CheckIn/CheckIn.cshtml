@using CmsWeb
@using UtilityExtensions
@{
    Layout = ViewExtensions2.TouchPointLayoutWithoutHeaderFooter();
}
@section head
{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/simple-keyboard@latest/build/css/index.css">
    @Fingerprint.Css("/Content/touchpoint/css/checkin.css")
}
<body class="checkin">
    <noscript>You've reached the @ViewExtensions2.DbSetting("NameOfChurch", Util.Host) check in portal. JavaScript is required, please enable JavaScript in your browser settings.</noscript>
    <template id="CheckInApp">
        <div v-if="view == 'login'" class="login">
            <h2 class="form-header text-center">@ViewExtensions2.DbSetting("NameOfChurch", Util.Host) Check In</h2>
            <form v-on:submit.prevent="auth" class="panel panel-default">
                <div class="form-group">
                    <label for="username">Sign In As</label>
                    <input type="text" name="username" class="form-control input-lg" placeholder="username or email" required="required" autocomplete="off" autocapitalize="off" autocorrect="off" v-model="user.name" />
                </div>
                <div class="form-group">
                    <input type="password" name="password" class="form-control input-lg" placeholder="password" required="required" v-model="user.password" />
                </div>
                <div class="form-group">
                    <label for="kiosk">Kiosk Name</label>
                    <input type="text" name="kiosk" class="form-control input-lg" placeholder="KioskName" required="required" v-model="kiosk.name" />
                </div>
                <div class="form-group">
                    <label for="profile">Use Kiosk Profile</label>
                    <select class="form-control input-lg" name="profile" id="profile" v-model="kiosk.profile">
                        <option value="default">Default</option>
                    </select>
                </div>
                <div class="form-actions">
                    <input type="submit" value="Sign In" class="btn btn-primary btn-block btn-lg">
                </div>
            </form>
        </div>
        <div v-else-if="view == 'landing'" class="landing">
            <h2>Enter your phone number</h2>
            <form v-on:submit.prevent="find">
                <input type="tel" name="phone" v-mask="phoneMask" v-model="search.phone" class="keyboard-input"/>
                <div class="simple-keyboard"></div>
            </form>
        </div>
        <div v-else-if="view == 'families'" class="families">
            <h2>Family Picker</h2>
            <div v-for="family in families" class="row">
                <div class="col-xs-2">
                    <img v-if="family.picture" class="member-portrait" v-bind:src="'data:image/jpeg;base64, ' + family.picture" />
                    <br />
                </div>
                <div class="col-xs-10">
                    <a v-on:click="selectFamily(family)">{{ family.name }} Family</a>
                </div>
            </div>
            <a class="btn btn-primary" v-on:click="loadView('landing')">return</a>
        </div>
        <div v-else-if="view == 'checkin'" class="results">
            <h2 class="pull-left">Choose the classes you are checking in to</h2>
            <button v-on:click="updateAttendance" class="btn btn-primary pull-right" style="margin-top: 22px;"><span v-if="attendance.length">Print and Return</span><span v-else>Return</span></button>
            <span class="clearfix"></span>
            <form v-on:submit.prevent="updateAttendance">
                <div v-for="member in members" class="member row">
                    <img v-if="member.picture" class="member-portrait" v-bind:src="'data:image/jpeg;base64, ' + member.picture" />
                    <div class="member-details">
                        <h4 class="name">{{ member.name }} <span class="badge badge-info" v-if="member.age < 18">{{ member.age }}</span></h4>
                        <hr />
                        <div v-for="group in member.groups">
                            <a v-on:click="toggleAttendance(member.id, group.id)" style="float:left; margin-right: 12px;">
                                <i v-if="attendance.includes(member.id + '.' + group.id)" class="fa fa-2x fa-check-square-o text-primary"></i>
                                <i v-else class="fa fa-2x fa-square-o"></i>
                            </a>
                            <p style="font-size: 12px; margin-bottom: 5px;">{{ group.date | formatDate }}</p>
                            <p>{{ group.name }}<span v-if="group.leaderName.length">, {{ group.leaderName }}</span></p>
                        </div>
                        <div v-if="member.groups.length == 0">
                            <p style="font-size: 12px; margin-bottom: 5px;">No meeting time.</p>
                            <p>No self check-in meetings available.</p>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary pull-right"><span v-if="attendance.length">Print and Return</span><span v-else>Return</span></button>
            </form>
        </div>
        <div v-else class="loading">
            <div class="panel panel-default">
                <p>Loading, please wait...</p>
            </div>
        </div>
    </template>
</body>

@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/v-mask/dist/v-mask.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-keyboard@latest/build/index.min.js"></script>
    @Fingerprint.Script("/Content/touchpoint/js/checkin.js")
}
