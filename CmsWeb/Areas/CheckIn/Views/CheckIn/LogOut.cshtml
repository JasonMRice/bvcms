@using CmsWeb
@using UtilityExtensions
@{
    Layout = ViewExtensions2.TouchPointLayoutWithoutHeaderFooter();
    ViewBag.Title = ViewExtensions2.DbSetting("NameOfChurch", Util.Host) + " Check In";
}
<div class="checkin">
    <p><a href="/CheckIn">Click here</a> if you are not automatically redirected.</p>
</div>
@section scripts {
<script type="text/javascript">
    var date = new Date();
    date.setFullYear(2010);
    localStorage.removeItem('identity');
    localStorage.removeItem('profile');
    document.cookie = encodeURIComponent('Authorization') + "=; expires =" + date.toGMTString() + "; path=/";
    window.location.href = '/CheckIn';
</script>
}
