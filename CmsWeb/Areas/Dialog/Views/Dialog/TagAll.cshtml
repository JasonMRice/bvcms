@using CmsData
@model dynamic
<div class="modal-dialog">
    <div class="modal-content">
        <form id="TagAllDialog" method="post" class="ajax ignoreResult">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Tag All</h4>
            </div>
            <div class="alert alert-info">You are about to tag @Model.Count() people</div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label for="tagname" class="control-label">Tag Name</label>
                            <input name="tagname" id="tagname" type="text" value="@Util2.CurrentTagName" data-rule-required="true" class="form-control" />
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label>
                                    @Html.CheckBox("cleartagfirst", false) Clear tag first?
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a class="btn btn-default" data-dismiss="modal">Cancel</a>
                <input type="submit" class="btn btn-primary" value="OK" />
            </div>
        </form>
    </div>
</div>
