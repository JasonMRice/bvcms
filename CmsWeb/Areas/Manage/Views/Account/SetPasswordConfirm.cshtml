@{
    ViewBag.Title = "Confirm Password Reset";
    
    if ((bool?)ViewData["hasshell"] == true)
    {
        Layout = "~/Views/Shared/Account/_ShellLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/Account/_Layout.cshtml";
    }
}
<br/>
@using (Html.BeginForm("SetPasswordConfirm", "Account"))
{
    <input type="hidden" id="id" name="id" value="@ViewBag.Id" />
    <div class="alert alert-warning">
        <h4>Confirm Password Reset</h4>
        <p>Please click the button below to continue.</p>
        <p>
            <button type="submit" class="btn btn-warning">Reset Password</button>
        </p>
    </div>
}
