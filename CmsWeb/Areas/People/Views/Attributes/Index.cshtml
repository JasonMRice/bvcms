@model CmsWeb.Areas.People.Models.AttributesModel
@{
  Layout = ViewExtensions2.TouchPointLayout();
  ViewBag.Title = "Attributes";
  ViewBag.PageHeader = "Attributes";
  ViewBag.PageSubHeader = $"<a href=\"/Person2/{Model.PeopleId}\">{Model.Name}</a>";
}
<div class="report box box-responsive">
  <div class="box-content">
      <div class="table-responsive">
          <table class="table notwide">
              <thead>
              <tr><th>Name</th><th>Value</th></tr>
              </thead>
              <tbody>
              @foreach (var r in Model.Attributes())
              {
                  <tr><td>@UtilityExtensions.Util.SpaceCamelCase(r.Name)</td><td>@r.ValueX</td></tr>
              }
              </tbody>
              @if (User.IsInRole("Edit"))
              {
              <tfoot>
              <tr>
                  <td colspan="2">
                      <a class="btn btn-default" href="/Person/Attributes/Edit/@Model.Field/@Model.PeopleId">Edit</a>
                  </td>
              </tr>
              </tfoot>
              }
          </table>
      </div>
  </div>
</div>
