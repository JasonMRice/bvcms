@model IEnumerable<CmsData.View.MyGatewaySettings>
@{
    Layout = ViewExtensions2.TouchPointLayout();
    ViewBag.Title = "Gateway";
    ViewBag.PageHeader = "Gateway Settings";
}

@if (Model.Count() > 0)
{
    <div class="noprocess row">
        <div class="col-lg-9">
            <div class="box box-responsive">
                <div class="box-title-btn">
                    <div class="box-tools">
                        <a href="#" class="btn btn-success create-new more-configs"><i class="fa fa-plus-circle"></i> More configurations</a>
                    </div>
                </div>
                <div class="box-content">
                    <div class="table-responsive">
                        <table id="settings" class="table table-striped">
                            <thead>
                                <tr>
                                    <th style="width: 150px;">
                                        Process Name
                                    </th>
                                    <th style="width: 150px;">
                                        Gateway Name
                                    </th>
                                    <th style="width: 150px;">
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td style="width: 100px;">@item.ProcessName</td>
                                        <td style="width: 100px;">@item.GatewayName</td>
                                        <td style="width: 50px;">
                                            <a href="#" onclick="editprocess(@item.GatewaySettingId, @item.ProcessId, @item.GatewayId)" class="btn btn-sm btn-info"><i class="fa fa-trash"></i>&nbsp;Edit</a>
                                            <a href="#" onclick="deleteprocess(@item.GatewaySettingId)" class="btn btn-sm btn-danger deleteprocess"><i class="fa fa-trash"></i>&nbsp;Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

else
{
    <div class="noprocess container col-md-12">
        <div class="col-md-6 col-md-offset-3 text-center">
            <h1>You do not have any Gateway Configuration</h1>
            <div class="pb2">
                <i class="fa fa-frown-o"></i>
            </div>
            <button class="btn btn-info addnew"><i class="fa fa-plus"></i>&nbsp;Add New</button>
        </div>
    </div>
}

<div hidden class="noprocess container col-md-12">
    <div class="col-md-4 col-md-offset-4 text-center">
        @using (Html.BeginForm("AddGatewaySettings", "Gateway", FormMethod.Post, new { @id = "AddGatewaySettings" }))
        {
            <div class="form-group">
                <label for="exampleInputEmail1">Process</label>
                <div class="col-md-12 form-group">
                    <div class="col-md-12 form-group">@Html.DropDownList("ProcessId", (SelectList)ViewBag.AvailableProcess, new { @class = "form-control" })</div>
                    <div class="col-md-12 form-group"><small class="form-text text-muted">Before any other configuration you need to link a process with a Gateway.</small></div>
                </div>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Gateway</label>
                <div class="col-md-12 form-group">
                    <div class="col-md-10 form-group">@Html.DropDownList("GatewayId", (SelectList)ViewBag.Gateways, new { @class = "form-control", @id = "gatewaylist" })</div>
                    <div class="col-md-2 form-group"><a class="btn btn-primary getconfig"><i class="fa fa-cogs"></i></a></div>
                </div>
            </div>
            if (Model.Count() == 3)
            {
                <button disabled class="btn btn-default"><i class="fa fa-save"></i>&nbsp;Save</button>
            }
            else
            {
                <button class="btn btn-success"><i class="fa fa-save"></i>&nbsp;Save</button>
            }
            <a href="#" class="btn btn-warning cancel"><i class="fa fa-ban"></i>&nbsp;Cancel</a>
        }
    </div>
</div>

<div id="gatewayModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Gateway Configuration</h4>
            </div>
            <div class="modal-body">
                <form name="myform" role="form" novalidate>

                    <div id="gatewayValues">
                    </div>

                    <div class="form-inline text-center pt2">
                        <div class="form-group">
                            <a class="btn btn-success newconfiguration"><i class="fa fa-plus"></i>&nbsp;Add Configuration</a>
                        </div>

                        <div class="form-group">
                            <a class="btn btn-info saveconfiguration"><i class="fa fa-save"></i>&nbsp;Save</a>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div id="processModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Gateway Configuration</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("AddGatewaySettings", "Gateway", FormMethod.Post, new { @id = "AddGatewaySettings" }))
                {
                    <div class="text-center">
                        <div class="col-md-12 text-center">
                            <h4>Process</h4>
                            <input hidden name="GatewaySettingId" id="GatewaySettingId" value="" type="number" />
                            <input hidden name="ProcessId" id="secproccessId" value="" type="number" />
                            <input hidden name="Operation" value="1" type="number"/>
                        </div>
                        <div class="col-md-12 pb2">
                            @Html.DropDownList("GatewayId", (SelectList)ViewBag.Gateways, new { @class = "form-control", @id = "secgatewaylist" })
                        </div>
                        <div class="text-center">
                            <button class="btn btn-info"><i class="fa fa-save"></i>&nbsp;Save</button>
                        </div>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
