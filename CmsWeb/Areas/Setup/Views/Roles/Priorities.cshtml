@model IEnumerable<CmsData.Role>
@{
    Layout = ViewExtensions2.TouchPointLayout();
    ViewBag.Title = "Roles";
    ViewBag.PageHeader = "Roles";
}
@section head{
    <script src="https://cdn.jsdelivr.net/npm/@("@")shopify/draggable@1.0.0-beta.8/lib/sortable.js"></script>
}
@using (Html.BeginForm("SavePriorities", "Roles"))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-responsive">
                <div class="box-title-btn">
                    <div class="box-tools">
                        <a href="/Roles" class="btn btn-default"><i class="fa fa-arrow-circle-left"></i> Cancel</a> <button type="submit" class="btn btn-success">Save</button>
                    </div>
                </div>
                <div class="box-content">
                    <p>Drag and drop to re order role priorities.</p>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th style="width: 100px;">Role Id</th>
                                    <th style="width: 500px;">Role Name</th>
                                    <th style="width: 50px;text-align:center;">Action</th>
                                </tr>
                            </thead>
                            <tbody class="sortable">
                                @foreach (var item in Model)
                                {
                                    <tr class="role dropzone">
                                        <td style="width: 100px;">@item.RoleId<a href="#" id="@item.RoleId"></a></td>
                                        <td style="width: 370px;">@item.RoleName</td>
                                        <td style="width: 180px;text-align:center;">
                                            <i class="handle fa fa-bars"></i>
                                            <input type="hidden" name="roles[]" value="@item.RoleId" />
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="visible-xs-block">
                            <a href="/Roles" class="btn btn-default"><i class="fa fa-arrow-circle-left"></i> Cancel</a>
                            <button type="submit" class="btn btn-success">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section scripts
{
        <script type="text/javascript">
            var sortable = new Sortable.default(document.querySelectorAll('.sortable'), {
                draggable: '.role',
            });
        </script>
    }
