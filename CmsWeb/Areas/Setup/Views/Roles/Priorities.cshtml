@model IEnumerable<CmsData.Role>
@{
    Layout = ViewExtensions2.TouchPointLayout();
    ViewBag.Title = "Roles";
    ViewBag.PageHeader = "Roles";
}
@section head{
}
<div class="row">
    <div class="col-lg-12">
        <div class="box box-responsive">
            <div class="box-title-btn">
                <div class="box-tools">
                    @using (Html.BeginForm("Create", "Roles"))
                    {
                        <a href="/Roles" class="btn btn-default"><i class="fa fa-arrow-circle-left"></i> Cancel</a> <button type="submit" class="btn btn-success">Save</button>
                    }
                </div>
            </div>
            <div class="box-content">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th style="width: 100px;">Role Id</th>
                                <th style="width: 500px;">Role Name</th>
                                <th style="width: 50px;text-align:center;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td style="width: 100px;">@item.RoleId<a href="#" id="@item.RoleId"></a></td>
                                    <td style="width: 370px;">@item.RoleName</td>
                                    <td style="width: 180px;"><i class="fa fa-bars"></i></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="visible-xs-block">
                    @using (Html.BeginForm("Create", "Roles"))
                    {
                        <a href="/Roles" class="btn btn-default"><i class="fa fa-arrow-circle-left"></i> Cancel</a>
                        <button type="submit" class="btn btn-success">Save</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript">
        $(function () {
        });
    </script>
}
