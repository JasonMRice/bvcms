@model string
@{
    /**/
    
    var help = ViewData["help"] as string;
    if (help.HasValue())
    {
        help = $"<span class='help-block'>{help}</span>";
    }
    var requiredBirthYear = DbUtil.Db.Setting("RequiredBirthYear");
}
<div class="form-group">
    @Html.LabelFor(m => m, new { @class = "control-label" })
    <div class="controls">
        <div class="input-group birthdate">
            @Html.TextBoxFor2(m => m, true, null, new { @class = "form-control" })<span class="input-group-addon hidden-xs hidden-sm"><i class="fa fa-calendar"></i></span>
        </div>
        @Html.Raw(help)
        @Html.ValidationMessageLabelFor(m => m)
    </div>
</div>
@if (requiredBirthYear)
{
    <script>
    $('.birthdate').find('input').keydown(function (e) {
        var key = e.charCode || e.keyCode;
        if (key == 9) {
            // tab key still working
        } else {
            e.preventDefault();
        }
    });
    $('.birthdate').bind("cut copy paste", function (e) {
        e.preventDefault();
    });
    </script>
}
