@{
    var edit = User.IsInRole("Edit");
    var developer = User.IsInRole("Developer");
}
<ul>
    <li class="dropdown-header">Tags</li>
    <li><a href='@ViewBag.TagAction' class="dialog-options qid" data-target='@ViewBag.DialogAction' data-callback="TagAllCallBack">Add All</a></li>
    <li><a id="UnTagAll" href='@ViewBag.UnTagAction' class="qid">Remove All</a></li>
    <li class="divider"></li>
    <li class="dropdown-header">Contacts / Tasks</li>
    <li><a id="AddContact" href='@ViewBag.AddContact' class="qid">Add Contact</a></li>
    <li><a id="AddTasks" href='@ViewBag.AddTasks' class="qid">Add Tasks</a></li>
    <li><a href='/Task/NotesExcel2/@ViewBag.queryid' class="qid">Export Task Notes</a></li>
    @if (edit)
    {
        <li class="divider"></li>
        <li class="dropdown-header">Extra Values</li>
        <li><a href="/ExtraValue/NewAdhocFromQuery/@ViewBag.queryid" class="adhoc-extravalue qid" title="Add Extra Value">Add Extra Values</a></li>
        <li><a href='/ExtraValue/DeleteFromQuery/@ViewBag.queryid' class="adhoc-extravalue qid" title="Delete Extra Values">Delete Extra Values</a></li>
        <li><a href="/ExtraValue/Grid/@ViewBag.queryid" class="qid">Extra Values Grid</a></li>
    }
</ul>
